<h5>Artist Page Comments</h5>
<div class="comment-section">
    {{#if artist.comments}}
        {{#each artist.comments}}
            <article class="comment-{{@index}}">
                <div>
                    <span>{{this.commentauthor}}</span>
                    <br>
                    <span>{{this.date}}</span>
                    <p>{{this.commenttext}}</p>
                </div>
            </article>

        {{/each}}
    {{else}}
    <p>There are no comments yet, fill out the form below to add a comment.</p>
    {{/if}}
    <section>
        {{!-- Comment Form  --}}
        <form class="" action="/artist/{{id}}" method="post">
            <div>
                <label for="commentauthor">Name</label>
                <input type="text" name="commentauthor" value="" placeholder="name">
            </div>
            <div>
                <label for="commenttext">Comment Area</label>
                <textarea name="commenttext" rows="8" cols="80"></textarea>
            </div>
            <div>
                <a href="/artists/{{artist.id}}"><input type="submit" name="submit" value="Add Comment" formaction="/artists/{{artist.id}}"></a>
            </div>

        </form>

    </section>

</div>
